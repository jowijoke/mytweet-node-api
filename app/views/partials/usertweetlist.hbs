<section class="ui raised segment">
    <div class="ui grid">
        <article class="six wide column">
            <table class="ui celled table segment">
                <thead>
                <tr>
                    <th>Tweet</th>
                    <th>Date</th>
                    <th>Delete</th>

                </tr>
                </thead>
                <tbody>
                {{#each userTweets}}
                    <tr>
                        <td> {{message}}
                            {{#exists picture.data}}
                                <img src="/getImage/{{_id}}" height="52" width="52" />
                            {{/exists}}
                        </td>
                        <td> {{dateFormat date}}</td>
                        {{#if ../adminUser}}
                            <td> <a href="/deleteAdminTweet/{{id}}"><i class="green remove icon"></i></a> </td>
                        {{/if}}
                        {{#if ../logUser}}
                            <td> <a href="/deleteTweet/{{_id}}"><i class="blue remove icon"></i></a> </td>
                        {{/if}}
                    </tr>


                {{/each}}
                {{#if logUser}}
                    <form action="/deleteAll" method="POST">
                        <button class="ui blue button">Delete All</button>
                    </form>
                {{/if}}

                {{#if adminUser}}
                    <form action="/deleteAllUserTweets/{{user._id}}" method="POST">
                        <button class="ui green button">Delete All</button>
                    </form>
                {{/if}}
                </tbody>

            </table>
        </article>
    </div>
</section>